<p id="notice"><%= notice %></p>

<p>
  <strong>Property name:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>Property fee:</strong>
  <%= @property.property_fee %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Age property:</strong>
  <%= @property.age_property %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @property.remarks %>
</p>

<% @property.stations.each_with_index do |station, index| %>
  <h2>最寄り駅<%= index + 1 %></h2>
  <p>
    <strong>路線名:</strong>
    <%= station.route_name %>
  </p>
  <p>
    <strong>駅名:</strong>
    <%= station.station_name %>
  </p>
  <p>
    <strong>徒歩分数:</strong>
    <%= station.minutes %>
  </p>
<% end %>


<%= link_to 'Edit', edit_property_path(@property) %> |
